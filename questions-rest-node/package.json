{
  "name": "api-question",
  "version": "1.0.0",
  "description": "API de questões e pontuação do teste de back-end para desenvolvedor da empresa Allgoo",
  "main": "main.js",
  "scripts": {
    "dev": "nodemon dist/main.js",
    "start": "node dist/main.js",
    "build": "tsc -w",
    "docs": "apidoc -i ts/routes/doc -o public/doc",
    "test": "ts-node __test__/startup.ts"
  },
  "apidoc": {
    "name": "Documentação da API de questões",
    "template": {
      "forceLanguage": "pt_br"
    }
  },
  "dependencies": {
    "apidoc": "^0.15.1",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "express": "^4.15.3",
    "express-validation": "^1.0.2",
    "helmet": "^3.9.0",
    "joi": "^13.0.1",
    "jsonwebtoken": "^8.0.0",
    "mongoose": "^5.0.6",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "request": "^2.87.0",
    "url": "^0.11.0",
    "winston": "^3.0.0-rc3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.11.1",
    "@types/helmet": "0.0.37",
    "@types/jest": "^23.3.1",
    "@types/mongoose": "^5.0.15",
    "@types/morgan": "^1.7.35",
    "@types/passport-jwt": "^3.0.1",
    "@types/request": "^2.47.0",
    "@types/supertest": "^2.0.5",
    "@types/winston": "^2.3.9",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "regenerator-runtime": "^0.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^23.0.1",
    "ts-node": "^6.0.5",
    "typescript": "^2.9.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "verbose": true,
    "testEnvironment": "node",
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./__test__/resultado"
  }
}
